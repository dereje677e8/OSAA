@model IEnumerable<OnlineStudentAcademicAdvisory.Models.InstructorFeedback>
@{
    ViewBag.Title = "ViewDepartmentFeedback";
}




<div class="row">
    <div class=" col-md-6">
        <h2>Feedbacks from Instructors</h2>
        <table class="table  table-hover table-bordered">
            <tr>
                <th>
                    Sender
                </th>
                <th>
                    Content
                </th>
                <th>
                    At
                </th>


            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="150px">

                        @Html.DisplayFor(modelItem => item.Instructor.FirstName) @Html.DisplayFor(modelItem => item.Instructor.MiddleName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.FeedbackContent)
                    </td>
                    <td width="150px">
                        @Html.DisplayFor(modelItem => item.FeedDate)
                    </td>
                </tr>

            }




        </table>

    </div>
    <div class=" col-md-6">
        <h2>Feedback from students</h2>
            <table class="table  table-hover table-bordered">
                <tr>
                    <th>
                        Sender
                    </th>
                    <th>
                        At
                    </th>
                    <th>
                        Content
                    </th>

                </tr>

                @foreach (var student in Model)
                {
                    <tr>
                        <td width="150px">

                            @Html.DisplayFor(modelItem => student.Instructor.FirstName) @Html.DisplayFor(modelItem => student.Instructor.MiddleName)
                        </td>
                        <td width="150px">
                            @Html.DisplayFor(modelItem => student.FeedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => student.FeedbackContent)
                        </td>

                    </tr>
                }

            </table>
        </div>


</div>




