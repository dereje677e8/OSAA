@model OnlineStudentAcademicAdvisory.Models.InstructorFeedback

@{
    ViewBag.Title = "StaffFeedback";
}
<div class="fa-align-center container-md" style=" text-align: center; border-block: solid">
    <div class="container">
        @using (Html.BeginForm("StaffFeedback", "InstructorFeedbacks"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                        @*<input type="hidden" name="InstructorId" value="@Model.InstructorId" />*@
                        <input id="InstructorId"
                               name="InstructorId"
                               type="hidden"
                               value="1" />
                        @*@Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })*@
                    </div>
                </div>

                <div class="form-group">
                    <label>Your Feedback</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.FeedbackContent, new { htmlAttributes = new { @class = "form-control" }, placeholder = "type your feedbacks" })
                        @Html.ValidationMessageFor(model => model.FeedbackContent, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Send" class="btn btn-twitter" />
                    </div>
                </div>
            </div>
        }
    </div>

</div>
