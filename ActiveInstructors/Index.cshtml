@model IEnumerable<OnlineStudentAcademicAdvisory.Models.ActiveInstructor>

@{
    ViewBag.Title = "Index";
    int number = 0;

}
<h5 style="color:forestgreen">@TempData["Successfull"]</h5>
<div class="">
    <div class="alert bg-gradient2 text-black mb-0" role="article">
        <h5>Active Instructors list</h5>
    </div>
</div>


<table class="table  table-hover table-bordered">
    <tr>
        <th>
            No
        </th>
        <th>
            Name
        </th>
        <th>
            Status
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        number++;
        <tr>
            <td>
                @number
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructor.FirstName) @Html.DisplayFor(modelItem => item.Instructor.MiddleName)
            </td>
            <td>


                @if (item.IsActive == true)
                {
                    <span class="badge" style="color: black; background-color: seagreen; border-radius: 10px;">Active</span>

                }
                else if (item.IsActive == false)
                {
                    <span class="badge" style="color: black; background-color: red; border-radius: 10px;">Inactive</span>

                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<a href="@Url.Action("Create", "ActiveInstructors")" class="oi oi-plus" ></a>

