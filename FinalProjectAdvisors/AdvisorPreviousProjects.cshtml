@model IEnumerable<OnlineStudentAcademicAdvisory.Models.FinalProjectAdvisor>

@{
    ViewBag.Title = "AdvisorPreviousProjects";
}




<div class="">
    <div class="alert bg-gradient2 text-black mb-0" role="article">
        <h2>Previous Projects</h2>
    </div>
</div>
<table class="table  table-hover table-bordered">
    <tr>

        <th>
            Project Title
        </th>
        <th>
            Created By

        </th>
        <th>
            You Are Here

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.FinalProject.ProjectTitle == null)
        {
            <tr>
                <td>
                    No projects accomplished yet!
                </td>
            </tr>

        }
       
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.FinalProject.ProjectTitle)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.FinalProject.Student.FirstName) @Html.DisplayFor(modelItem => item.FinalProject.Student.MiddleName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.AdvisorType.TypeName)
                </td>

                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        

    }

</table>




