@model IEnumerable<OnlineStudentAcademicAdvisory.Models.FinalProjectAdvisor>

@{
    ViewBag.Title = "OngoingProjects";
}
<div class="">
    <div class="alert bg-gradient2 text-black mb-0" role="article">
        <h2>Active Projects</h2>
    </div>
</div>

<table class="table  table-hover table-bordered">
    <tr>

        <th>
            Project Title
        </th>
        <th>
            Created By

        </th>
        <th>
            You Are Here

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FinalProject.ProjectTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalProject.Student.FirstName) @Html.DisplayFor(modelItem => item.FinalProject.Student.MiddleName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AdvisorType.TypeName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                <a class="btn-default" href="@Url.Action("InstructorDetails","FinalProjects", new { id = item.FinalProject.Id }) ">
                    Project Details|
                </a>
                <a href="@Url.Action("TerminateProject","FinalProjects", new { id = item.FinalProject.Id }) ">
                    Terminate
                </a>
            </td>
        </tr>
    }

</table>


