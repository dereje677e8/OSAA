{
    <h5> @TempData["Success"]</h5>
}
<div id="CreateGroup" class="modal fade modal-dialog modal-xl" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create Project</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CreateGroup", "Students"))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Project Title</label>
                        <div class="col-md-12">
                            <input class="form-control border-secondary" id="ProjectTitle" name="ProjectTitle" type="text" placeholder="--Project title--" value="" />

                        </div>
                    </div>

                    <div class="form-group">
                        <label>Description</label>

                        <div class="col-lg-12">
                            <textarea class="form-control border-success" id="Description" placeholder="--some sort of description--" name="Description" rows="2" cols="10"></textarea>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="modal-footer pull-right">
                            <input type="submit" value="Create" class="btn btn-success btn-lg" />
                            <button type="button" class="btn btn-danger btn-lg" data-dismiss="modal">Discard</button>

                        </div>
                       
                    </div>
                   
                </div>
                }
            </div>
            
        </div>

    </div>
</div>

