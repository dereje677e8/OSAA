@model IEnumerable<OnlineStudentAcademicAdvisory.Models.StudentBatch>

@{
    ViewBag.Title = "StudentList";
    int number = 0;
}

<h2>Student List</h2>


<table class="table  table-hover table-bordered">
    <tr>
        <th>
            No
        </th>
        <th>
            Name
        </th>
        <th>
            Id Number
        </th>
        <th>
            Section
        </th>

        <th>
            Entry Year
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        number++;
        <tr>
            <td>
                @number
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FirstName) @Html.DisplayFor(modelItem => item.Student.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.IdNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Batch.EntryYear)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
