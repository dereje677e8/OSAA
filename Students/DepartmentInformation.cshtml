@using OnlineStudentAcademicAdvisory.Models;

@model DepartmentInfo
@{
    int StudentNum = 0;
    int InstructorNum = 0;
    int StudentModalId = 0;
    int InstructorModalId = 0;
}

<div class="row">
    <div class="col-md-6">
        <div class="">
            <div class="alert bg-gradient2 text-black mb-0" role="article">
                <h2 style="position: center">Department Information</h2>
            </div>
        </div>


    </div>
    <div class="col-md-6">
        <div class="">
            <div class="alert bg-gradient2 text-black mb-0" role="article">
                <h3>@Session["Department"]</h3>

            </div>
        </div>
    </div>
</div>
<div class="row">

    <div class=" col-md-6">
        <table class="table  table-hover table-bordered">
            <tr>
                <th>
                    No
                </th>
                <th>
                    Student Name
                </th>
                <th>
                    Section
                </th>
                <th>
                    Entry Year
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model.studentBatch)
            {
                StudentNum++;
                StudentModalId++;
                <tr>
                    <td>
                        @StudentNum
                    </td>
                    <td>

                        @item.Student.FirstName @item.Student.MiddleName
                    </td>
                    <td>
                        @item.Section
                    </td>
                    <td>
                        @item.Batch.EntryYear
                    </td>

                    <td>
                        @*@Html.ActionLink("Details", "Details", new { id = item.Id, @class = "btn btn-primary" })*@
                        @*<button type="button" class="btn btn-link btn-lg" data-toggle="modal" data-target="#StudentDetails" new { item.Id }>Details</button>*@
                        <a data-id="@item.Id" data-controller="Students" data-action="Details" class="btn btn-info btn-lg" data-toggle="modal" data-target="#@item.Id">Details</a>

                        @*<a data-toggle="modal" data-target="#@StudentModalId">Details</a>*@

                        <!-- Modal -->
                        <div id="@item.Id" class="modal fade" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">

                                        <div class=" ">
                                            <div class="alert bg-gradient2 text-white mb-0" role="article">
                                                <h4 class="modal-title">Further Detail for the student</h4>
                                            </div>
                                        </div>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <dl class="dl-horizontal">
                                            <dt>
                                                Full Name
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.Student.FirstName) @Html.DisplayFor(modelItem => item.Student.MiddleName) @Html.DisplayFor(modelItem => item.Student.LastName)
                                            </dd>

                                            <dt>
                                                Id Number
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.Student.IdNumber)
                                            </dd>

                                            <dt>
                                                Sex
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.Student.Sex)
                                            </dd>

                                            <dt>
                                                Email
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(modelItem => item.Student.Email)
                                            </dd>

                                        </dl>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class=" col-md-6">
        <table class="table  table-hover table-bordered">
            <tr>
                <th>
                    No
                </th>
                <th>
                    Instructor Name
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Email Address
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.instructor)
            {
                InstructorNum++;
                InstructorModalId++;
                <tr>
                    <td>
                        @InstructorNum
                    </td>

                    <td>
                        @item.FirstName @item.MiddleName
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        <a data-id="@item.Id" data-controller="Instructors" data-action="Details" data-toggle="modal" data-target="#abc" class="modalLink user-details">Details</a>

                        <!-- Modal -->
                        <div id="abc" class="modal fade" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <div class="alert bg-gradient2 text-black mb-0" role="article">
                                            <h4 class="modal-title">This is further details about the instructor you clicked on</h4>
                                        </div>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <table class="table">
                                            <tr>
                                                <th>
                                                    Name
                                                </th>
                                                <th>
                                                    Phone Number
                                                </th>
                                                <th>
                                                    Email
                                                </th>
                                                <th>
                                                    Department
                                                </th>

                                            </tr>

                                            <tr>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.MiddleName) @Html.DisplayFor(modelItem => item.LastName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                                                </td>

                                            </tr>


                                        </table>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </td>


                </tr>
            }
        </table>



    </div>
</div>
